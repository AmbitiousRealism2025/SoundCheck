{
  "extends": "@istanbuljs/nyc-config-typescript",
  "reporter": [
    "html",
    "lcov",
    "text"
  ],
  "include": [
    "client/src/**/*.{ts,tsx}",
    "server/**/*.ts",
    "shared/**/*.ts"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "tests/**/*",
    "dist/**/*",
    "node_modules/**/*",
    "coverage/**/*",
    ".nyc_output/**/*",
    "playwright-report/**/*",
    "test-results/**/*",
    "**/*.config.ts",
    "**/*.config.js",
    "**/vite.config.ts",
    "**/drizzle.config.ts"
  ],
  "all": true,
  "check-coverage": true,
  "branches": 80,
  "lines": 80,
  "functions": 80,
  "statements": 80,
  "sourceMap": true,
  "instrument": true,
  "report-dir": "./coverage",
  "temp-directory": "./.nyc_output"
}